<h1> Cadastrar Receita </h1>
<form action="/receitaCreate" method="post">
        <div class="form-group">
                <label for="campoNome">Nome</label>
                <input type="text" class="form-control" id="campoNome" name="nome">
        </div>
        <div class="form-group">
                <label for="campoIngredientes">Ingredientes</label>
                <input type="text" class="form-control" id="campoIngredientes" name="ingredientes">
        </div>
        <div class="form-group">
                <label for="campoPreparo">Preparo</label>
                <input type="text" class="form-control" id="campoPreparo" name="preparo">
        </div>
        <button type="submit" class="btn btn-dark">Cadastrar</button>
</form>
